<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical"
    tools:context="com.example.administrator.policetong.fragment.PoliceConfirmed">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:text="名称:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/pp_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/k_height"
                    android:layout_centerVertical="true"
                    android:background="@drawable/kuang"
                    android:inputType="text" />

                <Button
                    android:id="@+id/pp_btn_name"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/icon_xiala" />
            </RelativeLayout>


            <TextView
                android:text="性质:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/pp_nature"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/k_height"
                    android:layout_centerVertical="true"
                    android:background="@drawable/kuang"
                    android:inputType="text" />

                <Button
                    android:id="@+id/pp_btn_nature"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/icon_xiala" />
            </RelativeLayout>

            <TextView
                android:text="等级:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <EditText
                android:id="@+id/pp_grade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/k_height"
                android:layout_centerVertical="true"
                android:background="@drawable/kuang"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:inputType="text"/>

            <TextView
                android:text="路面状况:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/pp_pavement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/k_height"
                    android:layout_centerVertical="true"
                    android:background="@drawable/kuang"
                    android:inputType="text" />

                <Button
                    android:id="@+id/pp_btn_pavement"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/icon_xiala" />
            </RelativeLayout>

            <TextView
                android:text="起点:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <EditText
                android:id="@+id/pp_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/k_height"
                android:layout_centerVertical="true"
                android:background="@drawable/kuang"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:inputType="text"/>

            <TextView
                android:text="终点:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <EditText
                android:id="@+id/pp_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/k_height"
                android:layout_centerVertical="true"
                android:background="@drawable/kuang"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:inputType="text"/>

            <TextView
                android:text="里程:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                />

            <EditText
                android:id="@+id/pp_distance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/k_height"
                android:layout_centerVertical="true"
                android:background="@drawable/kuang"
                android:layout_marginTop="@dimen/magrgin_txt_5"
                android:layout_marginStart="@dimen/magrgin_txt_1"
                android:layout_marginEnd="@dimen/magrgin_txt_1"
                android:inputType="text"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pp_add_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/mycolor"
                    android:text="提交"
                    android:textColor="@color/text_white" />

                <Button
                    android:id="@+id/pp_add_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@color/mycolor"
                    android:text="取消"
                    android:textColor="@color/text_white"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
