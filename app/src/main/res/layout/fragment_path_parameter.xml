<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical"
    tools:context="com.example.administrator.policetong.fragment.CarInFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择道路名称"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/pp_btn_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_xz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="性质"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_nature"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择道路性质"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/pp_btn_nature"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_dj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="等级"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_grade"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择道路等级"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/p_grade"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />


            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_zk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="路面状况"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_pavement"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择道路路面状况"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/pp_btn_pavement"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="起点"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入道路起点"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="34dp"
                    android:textSize="@dimen/text_commonbig" />


            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="终点"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入道路终点"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="34dp"
                    android:textSize="@dimen/text_commonbig" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_lc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="里程"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/pp_distance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入道路里程"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="34dp"
                    android:textSize="@dimen/text_commonbig" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/pp_add_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/member_btn_bg"
                    android:text="提交"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/pp_add_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@color/mycolor"
                    android:text="取消"
                    android:textColor="@color/text_white"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
