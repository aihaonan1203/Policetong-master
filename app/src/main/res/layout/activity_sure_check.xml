<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textColor="#000000">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_shenqingren" />

            <TextView
                style="@style/textView_comon_limitsize"
                android:gravity="center"
                android:text="申请人:" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/edittext_common_2" />
        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textColor="#000000">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_phone" />

            <TextView
                style="@style/textView_comon_limitsize"
                android:text="手机号:" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/edittext_common_2"
                android:enabled="false" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textColor="#000000">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_yijian" />

            <TextView
                style="@style/textView_comon_limitsize"
                android:text="大队意见:" />

            <TextView
                android:id="@+id/tv_yjd"
                style="@style/edittext_common_2"
                android:enabled="false" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textColor="#000000">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_beizhu" />

            <TextView
                style="@style/textView_comon_limitsize"
                android:text="中队意见:" />

            <TextView
                android:id="@+id/tv_yjz"
                style="@style/edittext_common_2"
                android:enabled="false" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />


        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColor="#000000">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    style="@style/textView_comon_limitsize"
                    android:text="通行开始时间:" />

                <TextView
                    android:id="@+id/tv_start_time1"
                    style="@style/edittext_common_2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择年月日"
                    />

                <TextView
                    android:id="@+id/tv_start_time2"
                    style="@style/edittext_common_2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择时分"
                    />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColor="#000000">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    style="@style/textView_comon_limitsize"
                    android:text="通行结束时间:" />

                <TextView
                    android:id="@+id/tv_end_time1"
                    style="@style/edittext_common_2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择年月日"
                    />

                <TextView
                    android:id="@+id/tv_end_time2"
                    style="@style/edittext_common_2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择时分"
                    />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#000000">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_luxian" />

                <TextView
                    style="@style/textView_comon_limitsize"
                    android:text="指派路线:" />

                <TextView
                    android:id="@+id/tv_select_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="点击选择通行路线"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16sp" />

            <include layout="@layout/line_horizontal" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/member_btn_bg"
            android:text="提交审核"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
