<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="第二大队XX月XX日安全保卫工作方案"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="组织领导："
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/jb_lingdao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/k_height"
            android:background="@drawable/kuang"
            android:paddingStart="5dp"
            android:layout_marginTop="10dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务时间以及到岗时间："
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magrgin_txt_5"
            >

            <EditText
                android:paddingStart="5dp"
                android:id="@+id/pc_add_time"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/k_height"
                android:layout_centerVertical="true"
                android:background="@drawable/kuang"
                android:inputType="text" />

            <Button
                android:id="@+id/pc_time"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_xiala"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="任务线路："
                android:layout_weight="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_path"
                android:text="生成路线"
                android:background="@color/mycolor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_RecyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="警力安排："
                android:layout_weight="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_jingli"
                android:text="生成表单"
                android:background="@color/mycolor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_RecyclerView2"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="方案描述："
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/kuang"
            android:paddingStart="5dp"
            android:gravity="left|top"
            android:layout_marginTop="10dp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注："
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_beizhu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/kuang"
            android:paddingStart="5dp"
            android:gravity="left|top"
            android:layout_marginTop="10dp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="提交"
            android:background="@color/mycolor"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>