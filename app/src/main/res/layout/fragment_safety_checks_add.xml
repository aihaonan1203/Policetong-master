<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.administrator.policetong.fragment.SafetyChecks">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/sg_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择时间"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/sg_select_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="道路"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/sg_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择道路"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/sg_type_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_lc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="路段"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/jb_lingdao"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:hint="请输入路段"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="35dp"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />



            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_dj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="所属行政单位"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/sg_car_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择所属行政单位"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/safety_car_type_select"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_dj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="发现单位"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/sg_shoushang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请选择发现单位"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />


                <Button
                    android:id="@+id/sg_shoushang_s"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="是否上报"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/sg_chesun"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入是否上报"
                    android:text="是"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="34dp"
                    android:textSize="@dimen/text_commonbig" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_jl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="是否整改"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/safety_zhenggai"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入是否整改"
                    android:text="是"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="34dp"
                    android:textSize="@dimen/text_commonbig" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="整改时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

                <EditText
                    android:id="@+id/safety_zgtime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:hint="请选择整改时间"
                    android:textAlignment="textEnd"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_commonbig" />

                <Button
                    android:id="@+id/sg_select_zgtime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_path_select" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_type" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="整改详情"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />

            </LinearLayout>

            <EditText
                android:id="@+id/safety_xq"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:gravity="top|left"
                android:hint="请输入整改详情"
                android:padding="5dp"
                android:background="@drawable/kuang"
                tools:ignore="RtlHardcoded" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_path_zk" />

                <TextView
                    android:id="@+id/tv_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="@string/photo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_commonbig" />


                <Button
                    android:id="@+id/iv_take_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_take_photo" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mPhotoRecyclerView"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:overScrollMode="never"
                android:layout_height="120dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/sg_add_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/member_btn_bg"
                    android:text="提交"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/pp_add_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@color/mycolor"
                    android:text="取消"
                    android:textColor="@color/text_white"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>