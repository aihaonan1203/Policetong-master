<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="岗点:"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magrgin_txt_5"
        >

        <EditText
            android:paddingStart="5dp"
            android:id="@+id/pc_add_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/k_height"
            android:layout_centerVertical="true"
            android:background="@drawable/kuang"
            android:inputType="text" />

        <Button
            android:id="@+id/pc_time"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/icon_xiala"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="派遣:"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magrgin_txt_5"
        >

        <EditText
            android:id="@+id/dialog_pq"
            android:paddingStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/k_height"
            android:layout_centerVertical="true"
            android:background="@drawable/kuang"
            android:inputType="text"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/icon_xiala"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人数:"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magrgin_txt_5"
        >

        <EditText
            android:id="@+id/dialog_rs"
            android:paddingStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/k_height"
            android:layout_centerVertical="true"
            android:background="@drawable/kuang"
            android:inputType="number"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="人"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/rb_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不调灯"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/rb_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调灯"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mycolor"
            android:text="确认"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/dialog_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:background="@color/mycolor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="取消"
            />

    </LinearLayout>


</LinearLayout>