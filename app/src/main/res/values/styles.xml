<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--默认字体颜色-->
        <item name="android:textColor">@color/colorGray_dark2</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorMain</item>
        <!--<item name="colorPrimaryDark">@color/transparent</item>-->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/colorMain</item>

        <!--悬浮按键颜色-->
        <item name="colorAccent">@color/colorMain</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <!--recycler的分割线-->
        <item name="android:listDivider">@color/colorBackground</item>
        <!--&lt;!&ndash;dialog背景透明&ndash;&gt;-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:screenOrientation">portrait</item>


        <!--&lt;!&ndash;让页面全屏显示 状态栏变为透明&ndash;&gt;-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:statusBarColor">#999</item>-->


        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--沉浸式状态栏相关-->
        <!--<item name="android:windowTranslucentStatus"> true </item>-->



    </style>


    <!--//返回键-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <style name="MyDialogStyle">
    <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    <item name="android:windowFrame">@null</item><!--边框-->
    <item name="android:windowNoTitle">true</item><!--无标题-->
    <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
    <item name="android:windowIsTranslucent">true</item><!--半透明-->
    <item name="android:windowContentOverlay">@null</item><!--内容覆盖 -->
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 窗口样式Dialog -->
    <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    　</style>

    <style name="btn_base">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/c_disabled_black</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/s_btn_normal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <!--EditText灰色主题-->
    <style name="edittext_graydark1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#666666</item>
        <item name="colorControlActivated">#666666</item>
    </style>

    <style name="btn_login" parent="@style/btn_base">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/s_btn_login</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="login_page_wrap">
        <item name="android:background">@drawable/s_login_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="login_background">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="login_field">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHint">#ffa0a0a0</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">40.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
    </style>

    <style name="input_del">
        <item name="android:background">@drawable/login_input_del</item>
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
    </style>

    <!--详情界面 右边的数据-->
    <style name="textView_detail_data" parent="textView_detail">
        <item name="android:textColor">@color/colorGray_dark2</item>

    </style>

    <!--详情界面 左边的描述字体-->
    <style name="textView_detail">
        <!-- Customize your theme here. -->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/text_common</item>
        <!--<item name="android:background">#ffffff</item>-->
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:gravity">center</item>

    </style>

    <!--small-->
    <style name="textView_small" parent="textView_base">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="textView_smallsmall_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="textView_big" parent="textView_base">

        <item name="android:textSize">20sp</item>

    </style>


    <style name="textView_common" parent="textView_base">
        <item name="android:textSize">16sp</item>
    </style>


    <!--同左边的描述字体  高宽设定-->
    <style name="textView_comon_limitsize" parent="textView_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_common</item>

    </style>

    <style name="edittext_base">
        <item name="android:textSize">@dimen/text_common</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGray_dark2</item>

    </style>

    <!--///////////////////////////////////////////EditView ////////////////////////////////////////////////////////////////-->
    <!--一般输入框1  (间隔较大)-->
    <style name="edittext_common_1" parent="edittext_base">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <!--一般输入框2 (间隔较小) -->
    <style name="edittext_common_2" parent="edittext_base">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <!--base-->
    <style name="textView_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="main_menu_photo_anim">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

</resources>
